							<visible>!ListItem.IsParentFolder</visible>
						</control>
					</itemlayout>
					<focusedlayout height="113" width="1030">
						<control type="image">
							<left>20</left>
							<width>1010</width>
							<height>113</height>
							<include>FOScroll</include>
							<texture border="0">button.png</texture>
						</control>
						<control type="label">
							<left>50</left>
							<top>10</top>
							<width>1000</width>
							<label>BACK</label>
							<visible>ListItem.IsParentFolder</visible>
						</control>
						<control type="label">
							<left>50</left>
							<top>10</top>
							<width>1000</width>
							<label>BACK</label>
							<textcolor>white</textcolor>
							<shadowcolor>black</shadowcolor>
							<include>LabelScroll</include>
							<visible>ListItem.IsParentFolder</visible>
						</control>
						<control type="label">
							<left>50</left>
							<top>10</top>
							<width>900</width>
							<label>$INFO[ListItem.Label]</label>
							<visible>!ListItem.IsParentFolder</visible>
						</control>
						<control type="label">
							<left>50</left>
							<top>10</top>
							<width>930</width>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>white</textcolor>
							<shadowcolor>black</shadowcolor>
							<include>LabelScroll</include>
							<visible>!ListItem.IsParentFolder</visible>
						</control>
					</focusedlayout>

				</control>
			</control>
