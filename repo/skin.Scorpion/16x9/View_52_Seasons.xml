								<!-- <label>$INFO[ListItem.Label]</label> -->
								<!-- <visible>!ListItem.IsParentFolder</visible> -->
							<!-- </control> -->
						</control>

					</itemlayout>
					<focusedlayout height="390" width="340" condition="Container.Content(seasons)">
						<control type="group">
							<include>SeasonZoom</include>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture>65p.png</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture border="10">panel.png</texture>
							</control>
							<!-- <control type="label"> -->
								<!-- <left>-50</left> -->
								<!-- <top>295</top> -->
								<!-- <height>50</height> -->
								<!-- <width>350</width> -->
