				<!-- <height>363</height> -->
				<!-- <align>justify</align> -->
				<!-- <aligny>center</aligny> -->
				<!-- <label>$INFO[ListItem.Label2]</label> -->
			<!-- </control> -->
			<control type="group"> 
				<left>970</left>
				<width>880</width>
				<visible>![ListItem.IsParentFolder | String.Contains(ListItem.Label,next)]</visible>
				<control type="image">
					<left>-20</left>
					<top>800</top>
					<width>150</width>
					<align>center</align>
					<height>100</height>
					<aspectratio aligny="top">keep</aspectratio>
					<texture>$INFO[ListItem.Studio,resource://resource.images.studios.coloured/,.png]</texture>
				</control>
				<control type="image">
					<right>0</right>
					<top>800</top>
					<width>175</width>
					<height>150</height>
					<align>right</align>
					<!-- <aligny>center</aligny> -->
					<aspectratio aligny="top">keep</aspectratio>
					<texture>$INFO[ListItem.MPAA,flags/mpaa/,.png]</texture>
					<visible>![ListItem.IsParentFolder | String.Contains(ListItem.Label,Next)] + Control.IsVisible(54)</visible>
				</control>
				<control type="label">
					<top>950</top>
					<width>880</width>
					<height min="35" max="80">auto</height>
					<align>center</align>
					<aligny>top</aligny>
					<wrapmultiline>true</wrapmultiline>
					<font>font35r</font>
					<label>$VAR[Label_InfoLine] â€¢ $INFO[ListItem.Genre]</label>
				</control>
