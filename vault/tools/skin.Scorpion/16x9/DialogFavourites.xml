<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<controls>
		<control type="group">
			<include>WindowSlide</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>1260</width>
			<height>728</height>
			<control type="image">
				<left>20</left>
				<top>78</top>
				<width>1220</width>
				<height>620</height>
				<texture border="40">50d.png</texture>
			</control>
			<control type="image">
				<width>100%</width>
				<height>100%</height>
				<texture border="40">85.png</texture>
			</control>
			<control type="label" id="1">
				<left>30</left>
				<top>32</top>
				<width>1068</width>
				<height>40</height>
				<font>font50</font>
				<label>$LOCALIZE[1036]</label>
				<align>center</align>
				<textcolor>white2</textcolor>
			</control>
			<control type="panel" id="450">
				<left>30</left>
				<top>88</top>
				<width>1200</width>
				<height>600</height>
				<onup>450</onup>
				<ondown>450</ondown>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="300" width="200">
					<control type="image">
						<width>200</width>
						<height>300</height>
						<texture background="true" diffuse="paneldif2.png">$INFO[ListItem.Icon]</texture>
						<bordersize>7</bordersize>
					</control>
					<control type="image">
						<width>200</width>
						<height>300</height>
						<texture border="10">panel.png</texture>
						<bordersize>5</bordersize>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="200">
					<control type="image">
						<width>200</width>
						<height>300</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>7</bordersize>
						<include>PanelZoom</include>
						<include>FOScroll</include>
					</control>
					<control type="image">
						<width>200</width>
						<height>300</height>
						<texture border="10">panel.png</texture>
						<bordersize>5</bordersize>
						<include>PanelZoom</include>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>