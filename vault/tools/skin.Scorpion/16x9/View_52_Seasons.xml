<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="SeasonList">
		<control type="group">
			<include>WindowSlide</include>
			<visible>Control.IsVisible(52) +!Window.IsActive(selectdialog)</visible>
			<control type="image">
				<width>100%</width>
				<height>100%</height>
				<texture background="true">$INFO[Container.ListItemAbsolute(1).Art(fanart)]</texture>
			</control>
<!-- arrows -->
			<control type="group">
				<control type="button" id="6100">
					<left>15</left>
					<top>185</top>
					<width>110</width>
					<height>200</height>
					<onclick>pagedown(6600)</onclick>
					<label />
					<texturefocus>arrow_L.png</texturefocus>
					<texturenofocus>arrow_L.png</texturenofocus>
					<!-- <visible>String.Contains(Container(51).ListItemAbsolute(1).FolderPath,add) + String.IsEqual(Skin.String(Views),100%er)</visible> -->
				</control>
				<control type="image">
					<right>15</right>
					<top>185</top>
					<width>110</width>
					<height>200</height>
					<texture>arrow_R.png</texture>
				</control>
			</control>

<!-- season list -->
			<control type="group">
				<left>140</left>
				<top>120</top>
				<width>1640</width>
				<height>370</height>
				<control type="image">
					<height>100%</height>
					<width>100%</width>
					<texture background="true" border="20">season_banner.png</texture>
				</control>
				<control type="wraplist" id="52">
					<left>15</left>
					<top>10</top>
					<width>1630</width>
					<height>350</height>
					<onleft>52</onleft>
					<onright>52</onright>
					<onup>6600</onup>
					<ondown>6000</ondown>
					<orientation>horizontal</orientation>
					<focusposition>2</focusposition>
					<viewtype label="Seasons">list</viewtype>
					<preloaditems>2</preloaditems>
					<visible>Container.Content(seasons)</visible>
					<scrolltime tween="sine" easing="inout" reversable="false">400</scrolltime>
					<itemlayout height="390" width="340" condition="Container.Content(seasons)">
						<control type="group">
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture>context.png</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture border="10">panel.png</texture>
							</control>
							<control type="label">
								<left>-50</left>
								<top>295</top>
								<height>50</height>
								<width>350</width>
								<align>center</align>
								<font>font40</font>
								<textcolor>white</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>

					</itemlayout>
					<focusedlayout height="390" width="340" condition="Container.Content(seasons)">
						<control type="group">
							<include>SeasonZoom</include>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture>context.png</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture border="10">panel.png</texture>
							</control>
							<control type="label">
								<left>-50</left>
								<top>295</top>
								<height>50</height>
								<width>350</width>
								<align>center</align>
								<font>font40</font>
								<textcolor>white</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>

					</focusedlayout>
				</control>
			</control>
<!-- episodes list -->
			<control type="group">
				<left>350</left>
				<top>620</top>
				<width>1220</width>
				<height>440</height>
				<visible>!Window.IsActive(progressdialog) + Container.Content(seasons)</visible>
				<control type="image">
					<left>50</left>
					<height>440</height>
					<width>1120</width>
					<texture background="true">epi_banner.png</texture>
				</control>
				<control type="image">
					<left>100</left>
					<top>50</top>
					<height>340</height>
					<width>1020</width>
					<aspectratio>keep</aspectratio>
					<visible>Container(52).ListItem.IsParentFolder</visible>
					<texture>defaultfolderbackls.png</texture>
					<include>VizChange</include>
				</control>
				<control type="list" id="6000">
					<top>10</top>
					<left>60</left>
					<width>1100</width>
					<height>425</height>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<onup>52</onup>
					<ondown>6000</ondown>
					<focusposition>0</focusposition>
					<orientation>vertical</orientation>
					<preloaditems>2</preloaditems>
					<pagecontrol>6600</pagecontrol>
					<scrolltime easing="out" tween="quadratic">300</scrolltime>
					<content>$INFO[Container.ListItem.FolderPath]</content>
					<visible allowhiddenfocus="false">![Container(52).ListItem.IsParentFolder + Control.IsVisible(50)]</visible>
					<include>VizChange</include>
					<itemlayout height="140" width="1200">
						<control type="group">
							<left>5</left>
							<top>2</top>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<texture border="10">50b.png</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>270</left>
							<top>5</top>
							<height>20</height>
							<control type="label">
								<top>7</top>
								<width>1080</width>
								<height>30</height>
								<font>font35</font>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<top>60</top>
								<height>60</height>
								<width>1280</width>
								<font>font30r</font>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="140" width="1200">
						<control type="image">
							<width>1100</width>
							<height>140</height>
							<texture border="0">button.png</texture>
							<visible>Control.HasFocus(6000)</visible>
							<include>FOScroll</include>
						</control>
						<control type="group">
							<left>5</left>
							<top>2</top>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<texture border="10">50b.png</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>270</left>
							<top>5</top>
							<height>20</height>
							<control type="label">
								<top>7</top>
								<width>820</width>
								<height>30</height>
								<font>font35</font>
								<scroll>true</scroll>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<top>60</top>
								<height>60</height>
								<width>1080</width>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<font>font30r</font>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
				<control type="button" id="5200">
					<left>10</left>
					<top>490</top>
					<width>50</width>
					<height>100</height>
					<onfocus>SetFocus(50)</onfocus>
					<label />
					<texturefocus />
					<texturenofocus>arrow_l.png</texturenofocus>
					<!-- <visible>String.Contains(Container.ListItemAbsolute(1).FolderPath,add) + String.IsEqual(Skin.String(Views),100%er)</visible> -->
					<animation effect="fade" start="100" end="0" time="500" delay="1000" reversible="false" pulse="true" condition="true">Conditional</animation>
				</control>
		</control>
	</include>
</includes>