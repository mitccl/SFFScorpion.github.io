<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="SeasonList">
		<control type="group">
			<include>WindowSlide</include>
			<visible>Control.IsVisible(52) + !Window.IsActive(selectdialog)</visible>
			<control type="image">
				<width>100%</width>
				<height>100%</height>
				<texture background="true">$INFO[Container.ListItemAbsolute(1).Art(fanart)]</texture>
			</control>
<!-- arrows -->
			<control type="group">
				<control type="image">
					<left>15</left>
					<top>185</top>
					<width>110</width>
					<height>200</height>
					<texture>arrow_L.png</texture>
				</control>
				<control type="image">
					<right>15</right>
					<top>185</top>
					<width>110</width>
					<height>200</height>
					<texture>arrow_R.png</texture>
				</control>
			</control>

<!-- season list -->
			<control type="group">
				<left>140</left>
				<top>120</top>
				<width>1640</width>
				<height>370</height>
				<control type="image">
					<height>100%</height>
					<width>100%</width>
					<texture background="true" border="20">season_banner.png</texture>
				</control>
				<control type="wraplist" id="52">
					<left>15</left>
					<top>10</top>
					<width>1630</width>
					<height>350</height>
					<onleft>52</onleft>
					<onright>52</onright>
					<onup>6600</onup>
					<ondown>6000</ondown>
					<orientation>horizontal</orientation>
					<focusposition>2</focusposition>
					<viewtype label="Seasons">list</viewtype>
					<preloaditems>2</preloaditems>
					<scrolltime tween="sine" easing="inout" reversable="false">400</scrolltime>
					<itemlayout height="390" width="340" condition="Container.Content(seasons)">
						<control type="group">
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture>65p.png</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>4</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>350</height>
								<texture border="10">panel.png</texture>
							</control>
							<!-- <control type="label"> -->
