<!-- Animations -->
	<include name="WindowSlide">
			<animation effect="slide" Tweener="cubic" start="-2000,0" end="0,0" time="600" delay="100">WindowOpen</animation>
			<animation effect="slide" Tweener="cubic" end="2000,0" start="0,0" time="600">WindowClose</animation>
			<animation effect="slide" Tweener="cubic" start="-2000,0" end="0,0" time="600" delay="100">Visible</animation>
			<animation effect="slide" Tweener="cubic" end="2000,0" start="0,0" time="600">Hidden</animation>
	</include>

	<include name="PanelSlide">
		<animation effect="slide" Tweener="cubic" end="0,566" condition="Integer.IsLess(Container(50).Numitems,4) + !Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,340" condition="Integer.IsEqual(Container(50).Numitems,5) + !Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,0" condition="Integer.IsLess(Container(50).NumItems,8) + Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,114" condition="Integer.IsLess(Container(50).NumItems,7) + Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,113" condition="Integer.IsLess(Container(50).Numitems,6) + Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,113" condition="Integer.IsLess(Container(50).Numitems,5) + Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,113" condition="Integer.IsLess(Container(50).Numitems,4) + Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,113" condition="Integer.IsLess(Container(50).Numitems,3) + Container(50).HasParent">Conditional</animation>
		<animation effect="slide" Tweener="cubic" end="0,113" condition="Integer.IsLess(Container(50).Numitems,2) + Container(50).HasParent">Conditional</animation>
	</include>

	<include name="HomeZoom">
		<animation effect="zoom" tweener="quadratic" easing="out" start="100" end="120" center="auto" time="200">Focus</animation>
		<animation effect="zoom" tweener="quadratic" easing="in" start="120" end="100" center="auto" time="100">UnFocus</animation>
	</include>

	<include name="PanelZoom">
		<animation type="Focus">
			<effect type="zoom" tween="quadratic" easing="out" start="100" end="115" center="auto" time="300"/>
		</animation>
		<animation type="UnFocus">
			<effect type="zoom" tween="quadratic" easing="in" start="115" end="100" center="auto" time="300"/>
		</animation>
	</include>

	<include name="VizChange">
		<visible>![Container.OnNext | Container.OnPrevious]</visible>
		<animation effect="fade" tween="cubic" time="200" delay="200">VisibleChange</animation>
	</include>

	<include name="FOScroll">
		<animation effect="fade" start="0" end="100" time="200" reversible="false">Focus</animation>
		<animation effect="fade" start="100" end="0" time="100" reversible="false">UnFocus</animation>
	</include>

	<include name="LabelScroll">
		<animation effect="fade" start="0" end="100" time="200" delay="100" reversible="false">Focus</animation>
		<animation effect="fade" start="100" end="0" time="100" reversible="false">UnFocus</animation>
	</include>

	<include name="SeasonZoom">
		<animation type="UnFocus">
			<effect type="zoom" tween="quadratic" easing="in" start="120" end="100" center="auto" time="400" />
			<effect type="slide" tween="cubic" easing="in" start="0,40" end="0,0" time="400" />
		</animation>
		<animation type="Focus">
			<effect type="zoom" tween="quadratic" easing="out" start="100" end="120" center="auto" time="400"/>
			<effect type="slide" tween="cubic" easing="out" start="0,0" end="0,40" time="400" />
		</animation>
	</include>

