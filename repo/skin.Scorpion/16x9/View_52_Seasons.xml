								<!-- <visible>!ListItem.IsParentFolder</visible> -->
							<!-- </control> -->
						</control>

					</focusedlayout>
				</control>
			</control>
<!-- episodes list -->
			<control type="group">
				<left>350</left>
				<top>620</top>
				<width>1220</width>
				<height>440</height>
				<control type="image">
					<left>50</left>
					<height>440</height>
					<width>1120</width>
					<texture background="true">epi_banner.png</texture>
				</control>
				<control type="image">
					<left>100</left>
					<top>50</top>
					<height>340</height>
					<width>1020</width>
					<aspectratio>keep</aspectratio>
					<visible>Container(52).ListItem.IsParentFolder</visible>
					<texture>defaultfolderbackls.png</texture>
					<include>VizChange</include>
				</control>
				<control type="list" id="6000">
					<top>10</top>
					<left>60</left>
					<width>1100</width>
					<height>425</height>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<onup>52</onup>
					<ondown>6000</ondown>
					<focusposition>0</focusposition>
					<orientation>vertical</orientation>
					<preloaditems>2</preloaditems>
					<pagecontrol>6600</pagecontrol>
					<scrolltime easing="out" tween="quadratic">300</scrolltime>
					<content>$INFO[Container(52).ListItem.FolderPath]</content>
					<visible>![Container(52).ListItem.IsParentFolder]</visible>
					<include>VizChange</include>
					<itemlayout height="140" width="1200">
						<control type="group">
							<left>5</left>
							<top>2</top>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<texture border="10">50b.png</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>270</left>
							<top>5</top>
							<height>20</height>
							<control type="label">
								<top>7</top>
								<width>1080</width>
								<height>30</height>
								<font>font35</font>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<top>60</top>
								<height>60</height>
								<width>1280</width>
								<font>font30r</font>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="140" width="1200">
						<control type="image">
							<width>1100</width>
							<height>140</height>
							<texture border="0">button.png</texture>
							<visible>Control.HasFocus(6000)</visible>
							<include>FOScroll</include>
						</control>
						<control type="group">
							<left>5</left>
							<top>2</top>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<texture border="10">50b.png</texture>
								<bordersize>5</bordersize>
							</control>
							<control type="image">
								<width>250</width>
								<height>140</height>
								<aspectratio aligny="top">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<bordersize>10</bordersize>
							</control>
						</control>
						<control type="group">
							<left>270</left>
							<top>5</top>
							<height>20</height>
							<control type="label">
								<top>7</top>
								<width>820</width>
								<height>30</height>
								<font>font35</font>
								<scroll>true</scroll>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
							<control type="label">
								<top>60</top>
								<height>60</height>
								<width>1080</width>
								<textcolor>white2</textcolor>
								<shadowcolor>black</shadowcolor>
								<font>font30r</font>
								<label>[CAPITALIZE]$VAR[Label_InfoLine][/CAPITALIZE]</label>
								<visible>!ListItem.IsParentFolder</visible>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</include>
</includes>