		<control type="group">
			<left>75</left>
			<top>120</top>
			<width>1060</width>
			<height>930</height>
			<visible>Control.IsVisible(50) + ![Window.IsActive(addoninformation) | Window.IsActive(addonsettings) | Window.IsActive(selectdialog) | Window.IsActive(filebrowser)]</visible>
			<include>WindowSlide</include>
			<include>SettingsBG</include>
			<control type="group">
				<control type="list" id="50">
					<left>0</left>
					<top>9</top>
